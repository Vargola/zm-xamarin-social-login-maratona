<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLoginMaratona.Views.LoginPage"
             Title="{Binding Title}">
    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
        <Label Text="Meu App Social" TextColor="Black" FontSize="Medium"/>
        <Button Text="Logar com Face" Command="{Binding LoginCommand}"
                BackgroundColor="Blue" TextColor="White" FontSize="Medium"/>
    </StackLayout>
</ContentPage>